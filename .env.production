# Environment configuration for Production
APP_ENV=production
APP_DEBUG=false
APP_URL=https://tirocinio.clementeteodonno.it
# Note: APP_BASE_PATH is now auto-detected by AppConfig class
# Leave empty for production (root domain)
# APP_BASE_PATH=

# Database Production
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=beweb_app
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_password

# AI Configuration (configurate da UI, non qui)
AI_PROVIDER=openai
CLAUDE_API_KEY=
OPENAI_API_KEY=

# AI Feature Toggles
AI_SMART_FOCUS_ENABLED=true
AI_VOICE_ENABLED=true
AI_DAILY_RECAP_ENABLED=true
AI_PATTERN_INSIGHTS_ENABLED=true
AI_AUTO_BREAKDOWN_ENABLED=true

# Email for Daily Recap
RECAP_EMAIL_FROM=noreply@tirocinio.clementeteodonno.it
RECAP_EMAIL_NAME=Beweb AI Assistant

# Google OAuth Configuration
# IMPORTANTE: Aggiungi https://tirocinio.clementeteodonno.it/ai/import/oauth-callback
# nelle Authorized redirect URIs nella Google Cloud Console
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=